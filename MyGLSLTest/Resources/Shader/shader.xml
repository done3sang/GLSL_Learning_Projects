<?xml version="1.0" encoding="UTF-8" ?>
<!-- what's this in english -->
<root>
    <shader>
        <vertex>
            <basic_vert>./Shader/basic.vert</basic_vert>
            <uniformblock_vert>./Shader/uniformblock.vert</uniformblock_vert>
            <light_vert>./Shader/light.vert</light_vert>
        </vertex>
        <fragment>
            <basic_frag>./Shader/basic.frag</basic_frag>
            <uniformblock_frag>./Shader/uniformblock.frag</uniformblock_frag>
            <light_frag>./Shader/light.frag</light_frag>
        </fragment>
    </shader>
    <program>
        <basic>
            <vertex>basic_vert</vertex>
            <fragment>basic_frag</fragment>
        </basic>
        <uniformblock>
            <vertex>uniformblock_vert</vertex>
            <fragment>uniformblock_frag</fragment>
        </uniformblock>
        <light>
            <vertex>light_vert</vertex>
            <fragment>light_frag</fragment>
        </light>
    </program>
</root>
